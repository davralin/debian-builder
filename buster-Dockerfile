FROM debian:buster-slim
MAINTAINER davralin

RUN \
  /bin/echo "deb-src http://deb.debian.org/debian/ buster main" > /etc/apt/sources.list.d/src.list && \
  /usr/bin/apt-get -y update && \
  /usr/bin/apt-get -y install git-core blhc devscripts debhelper build-essential fakeroot --no-install-recommends
